<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_48"
                android:gravity="center_vertical">

    <CheckBox
        android:id="@+id/item_chart_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/common_16"
        android:layout_marginRight="@dimen/common_16"/>

    <TextView
        android:id="@+id/item_chart_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/item_chart_checkbox"
        android:gravity="center"
        android:textSize="@dimen/common_16sp"
        tools:text="Chart 1"/>

    <View
        android:id="@+id/item_chatr_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/item_chart_checkbox"
        android:background="@color/colorSeparatorDay"/>

</RelativeLayout>